<div class="links-actions">
	<div class="links-user-info">
		<div class="left-user-info">
			<img src="data:image/svg+xml;base64," alt="..." class="img-rounded"/>
		</div>
		<div class="right-user-info">
			<%=current_user.email %>
		</div>
		<div class="clear"></div>
	</div>
	<div class="links-form">
		<form>
			<div class="links-form-url">
				<textarea class="form-control" rows="3" placeholder="Paste the URL here..."></textarea>
			</div>
			<div class="links-form-button">
				<button>Save</button>
			</div>
		</form>
	</div>
</div>