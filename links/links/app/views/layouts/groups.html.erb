<!DOCTYPE html>
<html>
	<head>
		<title>Links</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% if current_user %>
		<%= render "layouts/navbar" %>
		<% end %>

		<div id='groups-layout'>
			<div id="groups-layout-left">
				&nbsp;
			</div>
			<div id='groups-layout-center'>
				<% flash.each do |name, msg| -%>
				<%= content_tag :div, msg, class: name %>
				<% end -%>

				<%= yield :center %>
			</div>
			<div id="groups-layout-right">
				&nbsp;
			</div>
		</div>
	</body>
</html>
