<%= content_for :center do %>
<div id='groups-content'>
	<%= render_navigation(:level => 1) %>
	<div id='filler'>&nbsp;</div>

	<div id='filler'>
		&nbsp;
	</div>

	<ul class='subgroups-nav'>
		<% @invites.each do |group| %>
		<li>
			<%= link_to group.name, accept_invite_to_group_path(group, current_user), method: :put %>
			<div class='action'>
			<%= link_to 'Accept', accept_invite_to_group_path(group, current_user), {:method => :put} %>
			</div>
			
		</li>
		<% end unless @invites.nil?%>
	</ul>
</div>
<% end %>